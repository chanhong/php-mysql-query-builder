{
	"name": "rkr/php-mysql-query-builder",
	"description": "Easy to use query builder for PHP5.3+/PDO",
	"license": "MIT",
	"authors": [{
		"name": "ron",
		"email": "ron.kirschler@gmail.com"
	}],
	"require": {
		"php": ">= 5.6",
		"ext-pdo": "*",
		"ext-spl": "*",
		"psr/log": "~1"
	},
	"require-dev": {
		"phpunit/phpunit": "~5.0",
		"phake/phake": "1.0.5",
		"rkr/fakepdo": "0.1.*"
	},
	"autoload": {
		"psr-4": {
			"Kir\\MySQL\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Kir\\MySQL\\": ["src/", "tests/"]
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 4 src",
		"phploc": "phploc --names *.php,*.phtml src"
	}
}
